<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--  switch  -->
    <style name="SwitchThemeAnimation" parent="Theme.AppCompat.Light">
        <!-- 스위치의 애니메이션 ON 상태일 때의 색상 -->
        <item name="colorControlActivated">@color/keyColor1</item>
        <!-- 스위치의 애니메이션 OFF 상태일 때의 색상 -->
        <item name="colorControlNormal">@color/unselectedLightColor</item>
    </style>

    <!-- Custom font style 일괄적용 -->
    <style name="TextViewStyle" parent="@android:style/Widget.DeviceDefault.TextView">
        <item name="android:fontFamily">@font/pretendard_medium</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ButtonStyle" parent="@android:style/Widget.DeviceDefault.Button.Borderless">
        <item name="android:fontFamily">@font/pretendard_medium</item>
    </style>

    <style name="EditTextStyle" parent="@android:style/Widget.DeviceDefault.EditText">
        <item name="android:fontFamily">@font/pretendard_medium</item>
    </style>

    <style name="RadioButtonStyle" parent="@android:style/Widget.DeviceDefault.CompoundButton.RadioButton">
        <item name="android:fontFamily">@font/pretendard_medium</item>
    </style>

    <style name="CheckboxStyle" parent="@android:style/Widget.DeviceDefault.CompoundButton.CheckBox">
        <item name="android:fontFamily">@font/pretendard_medium</item>
    </style>

    <style name="MyCheckBox" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/keyColor1</item>
        <item name="colorAccent">@color/keyColor1</item>
    </style>

    <style name="CalendarViewTheme" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/keyColor1</item>
    </style>


    <!--  제목 및 컨텐츠 font 지정  -->
