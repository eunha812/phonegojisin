<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="5dp">

    <ImageView
        android:id="@+id/imageViewItemAgent"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/baseline_close_24" />

    <TextView
        android:id="@+id/textViewItemAgentTitle"
        style="@style/textview_title_secondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toEndOf="@id/imageViewItemAgent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="구미 서비스 센터" />

    <TextView
        android:id="@+id/textViewItemAgentAddress"
        style="@style/textview_content_gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="@id/textViewItemAgentTitle"
        app:layout_constraintTop_toBottomOf="@id/textViewItemAgentTitle"
        tools:text="경상북도 구미시 가나다 마바사" />

    <TextView
        android:id="@+id/textViewItemAgentDistance"
        style="@style/textview_content_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="5036m" />

</androidx.constraintlayout.widget.ConstraintLayout>