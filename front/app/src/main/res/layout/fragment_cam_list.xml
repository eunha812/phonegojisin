<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/textViewPlus"
        layout="@layout/toolbar_back_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextHomeCamName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintTop_toBottomOf="@id/textViewPlus"
        android:background="@drawable/border_log_in"
        android:hint="@string/home_cam_name_hint"
        android:padding="20dp"
        android:textColorHint="@color/gray"
        android:textSize="14sp" />

    <Button
        android:id="@+id/floatingActionButton"
        android:layout_width="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/moduleCall"
        android:background="@drawable/button_black_corner_0"
        style="@style/textview_button_white_small"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>